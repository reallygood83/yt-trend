rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Premium Users Collection
    match /premiumUsers/{userId} {
      // 서버 사이드 API Route 전용 (Firebase Admin SDK 사용)
      // API Route에서 userId 검증으로 보안 유지
      allow read, write: if true;
    }

    // Learning Notes Collection
    match /learningNotes/{noteId} {
      // 서버 사이드 API Route 전용 (Firebase Admin SDK 사용)
      // API Route에서 userId 검증으로 보안 유지
      allow read, write: if true;
    }

    // User API Keys Collection (암호화된 API 키 저장소)
    match /userAPIKeys/{userId} {
      // 서버 사이드 API Route 전용 (Firebase Admin SDK 사용)
      // API Route에서 userId 검증 및 암호화/복호화 처리
      allow read, write: if true;
    }

    // Default Deny - 명시되지 않은 모든 컬렉션 차단
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
